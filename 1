
#include <stdio.h>

int main()
{
    int num, num1,soma,mult,sub,resto;
    float divi;
printf("informe um valor: ");
scanf("%d", &num);
printf("informe um segundo valor: ");
scanf("%d",&num1);

soma= num+num1;
sub=num-num1;
mult=num*num1;
divi=(float)num/num1;
resto=num%num1;

printf("soma: %d\n",soma);
printf("diferença: %d\n",sub);
printf("multiplicaçao: %d\n",mult);
printf("quociente: %d\n",divi);
printf("resto: %d\n",resto);


    return 0;
}
